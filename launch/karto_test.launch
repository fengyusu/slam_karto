<launch>
  <param name="/use_sim_time" value="true"/>

  <include file="$(find slam_karto)/config/move_base.xml"/>

  <node pkg="stage_ros" type="stageros" name="stageros" args="$(find roborts)/tools/worlds/icra.world" respawn="false" >

    <param name="base_watchdog_timeout" value="0.01" />
  </node>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find roborts)/tools/rviz/rm.rviz" />
  <node pkg="slam_karto" type="slam_karto" name="slam_karto" output="screen">
    <remap from="scan" to="base_scan"/>
  </node>
</launch>
